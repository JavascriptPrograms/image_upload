<!DOCTYPE html>
<html lang="en">
<head>
    <!-- start head-->
        <%- include('../include/header', { title: 'Employee Table'})  %>
    <!-- end head -->
</head>
<body>
 <!-- start body-->
 <%- include('../include/Navbar') %>
 <!-- end body -->  
    <div class="container-fluid">
        <h3 class="text-center">Employee Table</h3>
        <table class="table table-bordered mt-3">
            <thead class="table-primary">
              <tr>
                <th>id</th>
                <th>Employee Name</th>
                <th>Employee Profession</th>
                <th>Employee Date of Join</th>
                <th>Employee Image</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% employee.forEach((row)=>{ %>
                <tr>
                    <td><%= row.id %></td>
                    <td><%= row.employee_name %></td>
                    <td><%= row.employee_profession %></td>
                    <td><%= row.employee_join_date %></td>
                    <td><img src="/uploads/<%= row.employee_pic %>" alt="Image" style="width: 100px; height:100px;"/></td>
                    <td><a href="/edit_employee/<%= row.id %>" class="btn btn-success btn-sm">Edit</a></td>
                    <td><a href="/delete_employee/<%= row.id %>" class="btn btn-danger btn-sm">Delete</a></td>
                </tr>
             <% }); %>
            </tbody>
          </table>
    </div>
</body>
</html>
