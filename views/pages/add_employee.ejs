<!DOCTYPE html>
<html lang="en">
<head>
    <!-- start head-->
        <%- include('../include/header', { title: 'Add Employee'})  %>
    <!-- end head -->
</head>
<body>
 <!-- start body-->
 <%- include('../include/Navbar') %>
 <!-- end body -->  
    <div class="container-fluid">
       <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <h3 class="mt-5 text-center">Image Upload</h3>
                <form method="POST" action="submit_images" enctype="multipart/form-data">
                    <div class="mb-3 mt-3">
                        <label for="emp_name" class="form-label">Employee Name:</label>
                        <input type="text" class="form-control" id="emp_name" placeholder="Enter Employee Name" name="emp_name">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="emp_pro" class="form-label">Employee Profession:</label>
                        <input type="text" class="form-control" id="emp_pro" placeholder="Enter Employee Profession" name="emp_pro">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="emp_join_date" class="form-label">Employee Join Date:</label>
                        <input type="datetime-local" class="form-control" id="emp_join_date" placeholder="Enter Employee Join Date" name="emp_join_date">
                    </div>
                    <div class="mb-3 mt-3"">
                        <input type="file" id="myFile" name="image" />
                    </div>
                    <div class="mb-3 mt-3">
                        <button type="submit" class="btn btn-success btn-sm" style="width: 100%;">submit</button>
                    </div>
                  </form>
            </div>
            <div class="col-sm-4"></div>
       </div>
    </div>
</body>
</html>